<Window
    x:Class="RengaLookup.UIControl.PluginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:RengaLookup.UIControl.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RengaLookup.UIControl.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:RengaLookup.UIControl.ViewModel"
    Title="RengaLookup"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance viewModel:DesignViewModel,
                                     IsDesignTimeCreatable=True}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/Resources/WindowResources.xaml" />
    </Window.Resources>
    <Grid ScrollViewer.CanContentScroll="False">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListBox
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding InfoSet}"
            ScrollViewer.CanContentScroll="False">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ScrollViewer.CanContentScroll="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Content="{Binding Name}"
                            Style="{StaticResource CustomLabelStyle}" />
                        <ListBox
                            Grid.Row="1"
                            HorizontalContentAlignment="Stretch"
                            ItemsSource="{Binding InfoSet}"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="Auto" ScrollViewer.CanContentScroll="False">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <TextBox
                                            Grid.Column="0"
                                            IsReadOnly="True"
                                            Text="{Binding Name}" />
                                        <TextBox
                                            Grid.Column="1"
                                            IsReadOnly="True"
                                            Text="{Binding Type, Converter={StaticResource SyntaxTypeToStringConverter}}" />
                                        <TextBox
                                            Grid.Column="2"
                                            IsReadOnly="True"
                                            Text="{Binding Value}" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
